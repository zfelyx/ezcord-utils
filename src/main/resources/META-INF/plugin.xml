<!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN, cannot be changed between the plugin versions. -->
    <id>me.geckotv.ezcord-utils</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>EzCord Utils</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://geckotv.me">Gecko-Development</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        <h2>EzCord Utils - Supercharge Your Discord Bot Development!</h2>

        <p>A powerful IntelliJ plugin designed to streamline your Discord bot development workflow with <a href="https://ezcord.readthedocs.io/en/latest/">EzCord</a>.</p>
        <p>Say goodbye to manual language file navigation and hello to intelligent autocomplete!</p>

        <h3>âœ¨ Features</h3>
        <ul>
            <li><b>Smart Language Key Autocomplete</b> - Instantly suggests available language keys as you type</li>
            <li><b>Quick Documentation</b> - Hover over any language key to see its translation in real-time</li>
            <li><b>One-Click Navigation</b> - Jump directly to language definitions in YAML files with gutter icons (use Ctrl+Click for jumping to fallback)</li>
            <li><b>Language Keys Tool Window</b> - View all language keys and translations in a dedicated tool window with detailed information</li>
            <li><b>Live Templates</b> - Speed up your coding with pre-defined templates for common discord features</li>
        </ul>

        <h3>ðŸŽ¯ Perfect For</h3>
        <p>
            Developers working with <a href="https://ezcord.readthedocs.io/en/latest/">EzCord</a> who want to boost productivity and reduce errors
            when managing multi-language support.
        </p>
        <h3>Sponsors</h3>
        <a href="https://cookieapp.me/" title="Cookie-Bot" target="_blank">
          <img src="https://cdn.cookieapp.me/bot/banner.png" alt="Cookie - Discord Bot" border=0/>
        </a>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->

    <dependencies>
        <plugin id="org.jetbrains.plugins.yaml"/>
        <plugin id="com.intellij.modules.python-core-capable"/>
        <module name="intellij.platform.compose"/>
    </dependencies>
    <!-- Extensions defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="me.geckotv.ezcordutils.startup.PyCharmCheckStartupActivity"/>

        <notificationGroup id="EzCord Utils Notifications"
                           displayType="STICKY_BALLOON"/>

        <!-- Live Templates -->
        <defaultLiveTemplates file="/liveTemplates/discord.py.xml"/>
        <defaultLiveTemplates file="/liveTemplates/py-cord.xml"/>

        <toolWindow id="Language Keys" factoryClass="me.geckotv.ezcordutils.language.LanguageKeyToolWindowFactory"
                    icon="AllIcons.FileTypes.I18n"
                    anchor="right"/>

        <!-- Settings -->
        <projectConfigurable
            parentId="tools"
            instance="me.geckotv.ezcordutils.settings.EzCordSettingsConfigurable"
            id="me.geckotv.ezcordutils.settings"
            displayName="EzCord Settings"/>

        <!-- Language Key Autocomplete -->
        <completion.contributor
            language="Python"
            implementationClass="me.geckotv.ezcordutils.language.LanguageKeyCompletionContributor"
            order="first"/>

        <lang.documentationProvider
            language="Python"
            implementationClass="me.geckotv.ezcordutils.language.LanguageDocumentationProvider"
            order="first"/>

        <!-- Line marker for language keys -->
        <codeInsight.lineMarkerProvider
            language="Python"
            implementationClass="me.geckotv.ezcordutils.language.LanguageKeyLineMarkerProvider"/>

        <codeInsight.lineMarkerProvider
            language="yaml"
            implementationClass="me.geckotv.ezcordutils.language.LanguageKeyToUsageMarker"/>
    </extensions>

    <projectListeners>
        <listener
            class="me.geckotv.ezcordutils.language.LanguageFileEditorListener"
            topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>
    </projectListeners>
</idea-plugin>